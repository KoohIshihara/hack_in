atom-notification-hack
  div.f.fh
    div.wrap-atom.px20.py12
      p {'You have hacked ' + name}

  style(scoped, type='less').
    @import "public/stylesheets/main.less";
    @import "public/stylesheets/theme.less";
    :scope {
      display: none;
      bottom: -68px;
      opacity: 0.0;
      transition: all 0.4s;
      &.active {
        bottom: 68px !important;
        opacity: 1.0 !important;
      }
      position: fixed;
      left: 0;
      z-index: 100;
      width: 100%;
      height: 38px;
      .wrap-atom {
        background: @primaryBlack;
        border-radius: 3px;
        filter: drop-shadow(1px 1px 1px rgba(100,100,100,0.6));
        p {
          color: #FFF;
          font-weight: 500;
          text-align: center;
        }
      }
    }

  script.

    var self = this;

    this.name;

    riot.notificationOfHack = function(name) {

      self.name = name;
      riot.update();

      var notification = $('atom-notification-hack');
      notification.fadeToggle(0);
      notification.addClass('active');

      setTimeout(function(){
        notification.delay(400).fadeToggle(0);
        notification.removeClass('active');
      }, 2400);
    }
